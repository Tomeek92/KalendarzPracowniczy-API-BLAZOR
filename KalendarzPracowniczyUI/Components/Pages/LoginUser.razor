@page "/"
@using KalendarzPracowniczyApplication.Dto
@using KalendarzPracowniczyUI.Service
@rendermode InteractiveServer
@inject UserServiceUI UserServiceUI
@inject NavigationManager Navigation
<style>
/* Styl logo */
.logo-page img {
    margin-left: auto;
    margin-right: auto;
    display: block;
    width: 50%;
    height: auto;
}

/* Tło */
.login-container {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url('background.jpg') no-repeat center center/cover;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    position: relative;
    overflow: hidden;
}

.login-container::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    background: rgba(255, 255, 255, 0.05);
    animation: rotateBackground 15s infinite linear;
    z-index: 0;
}

@@keyframes rotateBackground {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

/* Pudełko formularza */
.login-box {
    position: relative;
    z-index: 1;
    background: rgba(0, 10, 30, 0.85); 
    padding: 20px 30px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4), inset 0 0 20px rgba(0, 100, 255, 0.3);
    border: 1px solid rgba(0, 100, 255, 0.3); 
    width: 100%;
    max-width: 400px;
    color: #f1f1f1;
    text-align: center;
    animation: fadeIn 1s ease-in-out;
    backdrop-filter: blur(10px);
}

/* Animacje pojawiania się */
@@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Neonowy efekt nagłówka */
.login-box h2 {
    margin-bottom: 20px;
    font-size: 28px;
    font-weight: 700;
    letter-spacing: 2px;
    color: #00aaff; 
    text-transform: uppercase;
    text-shadow: 0 0 8px rgba(0, 170, 255, 0.8), 0 0 12px rgba(0, 170, 255, 0.6);
}

/* Grupy formularza */
.input-group {
    position: relative;
    margin-bottom: 35px;
}

/* Pola tekstowe */
.input-group input {
    width: 90%;
    padding: 14px;
    padding-left: 10px;
    border-radius: 12px;
    border: 1px solid rgba(0, 150, 255, 0.5); 
    font-size: 16px;
    background-color: rgba(255, 255, 255, 0.1);
    color: #f1f1f1;
    transition: background-color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
}

.input-group input:focus {
    outline: none;
    background-color: rgba(255, 255, 255, 0.2);
    border-color: #00aaff;
    box-shadow: 0 0 10px rgba(0, 150, 255, 0.5), inset 0 0 8px rgba(0, 150, 255, 0.4);
}

/* Styl etykiety (placeholder) */
.input-group label {
    position: absolute;
    left: 12px;
    top: 14px;
    color: rgba(255, 255, 255, 0.7);
    font-size: 16px;
    transition: 0.2s ease all;
    pointer-events: none;
}

/* Efekt animacji etykiety */
.input-group input:focus + label,
.input-group input:not(:placeholder-shown) + label {
    top: -18px;
    font-size: 12px;
    color: #00aaff;
}

/* Przycisk logowania */
button[type="submit"] {
    width: 100%;
    padding: 14px;
    background-color: rgba(0, 150, 255, 0.5); 
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
    box-shadow: 0 4px 8px rgba(0, 150, 255, 0.3), 0 0 15px rgba(0, 150, 255, 0.4);
}

button[type="submit"]:hover {
    background-color: #00aaff;
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 150, 255, 0.5), 0 0 20px rgba(0, 150, 255, 0.6);
}

/* Link zapomnianego hasła */
.forgot-password {
    margin-top: 15px;
}

.forgot-password a {
    color: #f1f1f1;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s ease;
}

.forgot-password a:hover {
    color: #00aaff;
}

/* Responsywność */
@@media (max-width: 768px) {
    .login-box {
        width: 90%;
        padding: 30px;
    }
}
</style>

<div class="login-container">
    <div class="login-box">
        <div class="logo-page">
            <img src="UNISOFT_logo_CMYK_z_polem_ochronnym_alfa_white.png" />
        </div>
        <h2>Logowanie do BIDON!</h2>
        <br />
        <EditForm Model="@userDto" OnValidSubmit="Login" FormName="LoginAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="input-group">
                <InputText id="username" @bind-Value="userDto.UserName" placeholder=" " />
                <label for="username">Nazwa użytkownika</label>
            </div>
            <div class="input-group">
                <InputText id="email" @bind-Value="userDto.Email" placeholder=" " />
                <label for="email">Email</label>
            </div>
            <div class="input-group">
                <InputText id="password" type="password" @bind-Value="userDto.Password"  placeholder=" " />
                <label for="password">Hasło</label>
            </div>
            <button type="submit">Zaloguj się</button>
            <div class="forgot-password">
                <a href="#">Zapomniałeś hasła?</a>
            </div>
            @if (errorMessage != null)
            {
                <div class="message">@errorMessage</div>
            }

            @if (successMessage != null)
            {
                <div class="success-message">@successMessage</div>
            }

            @if (isLoading)
            {
                <div class="loader"></div>
            }
        </EditForm>
    </div>
</div>


@code {
    private bool isLoading = false;
    private UserDto userDto = new UserDto();
    private string? errorMessage;
    private string? successMessage;

    public async Task Login()
    {
        try
        {
            isLoading = true;
            await UserServiceUI.Login(userDto);
            errorMessage = null;
            Navigation.NavigateTo("/kalendarz");
        }
        catch(Exception ex)
        {
            errorMessage = $"Wystąpił błąd podczas logowania {ex.Message}";
            successMessage = null;
        }
        finally
        {
            isLoading = false;
        }
    }

}
